<h3> this is the jokes section </h3> 
<ul>
<% @jokes.each do |joke| %>
<li>
	<div class="setup" id="<%=joke.id%>" onclick="revealPunchline(<%=joke.id%>)">
		<%= joke.setup %> 
	</div>
	-- 
	<div class="punchline" id="<%="punchline#{joke.id}"%>">
		<%= joke.punchline %> 
	</div>	
</li> 
<% end %> 
</ul> 
<script>
	function revealPunchline(id) {
		var punchId = `punchline${id}`  ;
		document.getElementById(`${punchId}`).style.display = "block" ;
	}
</script>