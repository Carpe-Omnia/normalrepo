<h2>
<%= @user.name %> 
</h2>
<br>
<h4>
Karma: <%= @user.karma %> 
</h4>
<% if session[:user_id] == @user.id %>
	Bio:
	<%= form_for(@bio) do |f| %> 
	<label> Headline</label>
	<%= f.text_field :headline %> <br>
	<label> Content</label>
	<%= f.text_area :content %> <br>
	<%= f.submit %> 
	<% end %> 
<% else %>
	<% if session[:user_id] != nil %>
		<form action="/messages/new" method="get" >
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<input type="hidden" name="to" value="<%=@user.id%>" > 
		<input type="submit" value="message this user" > 
		</form>
		<br>
		<% if !!@confirmation %> 
			<h3> <%= @confirmation %> </h3>
		<% end %> 	
	<% end %> 	
	Bio:
	<% if !!@bio %>
		<%= @bio.headline %><br>
		<%= @bio.content %> 
	<% else %> 
		<%= "their bio is blank" %> 
	<% end %> 	
<% end %> 
	

